{
  "scripts": {
    "build": "bundle exec jekyll build",
    "start": "bundle exec jekyll serve",
    "doctor": "bundle exec jekyll doctor",
    "clean": "bundle exec jekyll clean"
  },
  "devDependencies": {
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
